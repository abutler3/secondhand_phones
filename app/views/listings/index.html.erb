<div class="jumbotron">
  <h1>Got a new phone? Sell<br>you old one to a local</h1>
  <h2>A more simple phone marketplace</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p>Sold by: <%= listing.user.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
